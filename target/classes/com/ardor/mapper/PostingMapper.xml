<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper

PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"

"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.ardor.mapper.PostingMapper">


	<!-- ================================== 기본값 : STAR ================================== -->
	
	<!-- 게시글 PK값 가져오기  -->
	<select id="getPostNo" resultType="Integer">
		select postNo from posting where bbsNo = #{bbsNo} and bbsPostNo = #{bbsPostNo};
	</select>
	
	<!-- ================================== 기본값 : END ================================== -->
	
	
	
	
	
	
	<!-- ================================== CRUD : START ================================== -->
	
	<!-- 게시글 등록 -->
	<insert id="insertPostingToDB">
		insert into posting(bbsPostNo,postWriter,postTitle,postContents,postNotice,postHit,postRegdate,bbsNo)
		values(#{bbsPostNo},#{postWriter},#{postTitle},#{postContents},#{postNotice},#{postHit},#{postRegdate},#{bbsNo})
	</insert>


	<!-- 게시글 1개 조회 -->
	<select id="getPostingByPostNo" resultType="postingDTO">
		select * from posting where postNo = #{postNo} 
	</select>


	<!-- 게시글 전체 조회 (특정게시판 PK값 이용) -->
	<select id="getBoardPostingsByDTO" resultType="postingDTO">
	    select * from posting where bbsNo = #{bbsNo}
	    <include refid="searchResult"></include> <!-- 쿼리순서에 유의 -->
	    <include refid="ordering"></include>
	</select>


	<!-- 모든 게시판의 게시글 조회 -->
	<select id="getGlobalPostingsFromDB" resultType="postingDTO">
		select * from posting
	</select>
	

	<!-- ================================== CRUD : END ================================== -->





	
	<!-- ================================== 유틸 : START ================================== -->
	
	
	
	<!-- 특정 게시판에 게시글의 갯수를 가져오기 -->
	<select id="getPostingCountBybbsNo" resultType="Integer">
		select count(*) from posting where bbsNo = #{bbsNo};
	</select>


	<!-- 게시글 조회수 증가 -->
	<update id="addHitUp">
		update posting set postHit = #{postHit}
		where postNo = #{postNo}
	</update>
	
	
	<!-- ================================== 유틸 : END ================================== -->
	
	
	<!-- ================================== 유틸 : START ================================== -->
	<!-- 검색어 필터링 -->
	<sql id="searchResult">
	    <choose>
	        <when test="searchTarget == 'TITLE'">
	            and postTitle like CONCAT('%', #{keyWord}, '%')
	        </when>
	        <when test="searchTarget == 'WRITER'">
	            and postWriter like CONCAT('%', #{keyWord}, '%')
	        </when>
	        <when test="searchTarget == 'CONTENTS'">
	            and postContents like CONCAT('%', #{keyWord}, '%')
	        </when>
	    </choose>
	</sql>
	
	<!-- 순서 필터링 -->
	<sql id="ordering">
	    <choose>
	        <when test="orderBy == 'IDX_ASC'">
	            order by bbsNo ASC
	        </when>
	        <when test="orderBy == 'REGDATE_DESC'">
	            order by postRegdate DESC
	        </when>
	        <when test="orderBy == 'REGDATE_ASC'">
	            order by postRegdate ASC
	        </when>
	        <when test="orderBy == 'HIT_DESC'">
	            order by postHit DESC
	        </when>
	        <when test="orderBy == 'HIT_ASC'">
	            order by postHit ASC
	        </when>
	        <otherwise>
	            order by bbsPostNo DESC
	        </otherwise>
	    </choose>
	    limit #{pageStartRowNum}, #{pageRows}
	</sql>
		
	
	
	<!-- ================================== 필터링 : END ================================== -->
	
	
	
	
	
	
	
	
	

</mapper>